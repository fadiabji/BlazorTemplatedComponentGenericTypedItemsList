<GridAutoComponent Items="Employees" 
                   ColumsToExcludeCSV="Id"
                   CssClass=" is-bordered is-striped is-hoverable"></GridAutoComponent>
 


@code{
    private List<Employee> Employees;


    protected override void OnInitialized()
    {
        base.OnInitialized();

        Employees = new List<Employee>();

        Employees.AddRange(new Employee[3]
        {
            new Employee {Id = 1, Name = "Fadi Abji", Title= "Developer", Department = "Dev" },
             new Employee {Id = 2, Name = "Maryam", Title= "Developer", Department = "Dev" },
              new Employee {Id = 3, Name = "Sally Abji", Title= "Developer", Department = "Dev" }
        });
    }
    public class Employee
    {
        public int  Id { get; set; }
        public string Name { get; set; }
        public string Title { get; set; }
        public string Department { get; set; }
    }
}